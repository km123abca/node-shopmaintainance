	  <div id="numpad">
	  	<div class='btn-row'>
	  		<button class="btn btn-success nbtn" onclick="typed(this)">1</button>
	  		<button class="btn btn-success nbtn" onclick="typed(this)">2</button>
	  		<button class="btn btn-success nbtn" onclick="typed(this)">3</button>
	  	</div> 
